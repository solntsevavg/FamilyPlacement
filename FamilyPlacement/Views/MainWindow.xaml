<Window x:Class="FamilyPlacement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyPlacement.Views"
        xmlns:vm="clr-namespace:FamilyPlacement.ViewModels"
        xmlns:models="clr-namespace:FamilyPlacement.Models"
        Title="Размещение деревьев"
        Width="400"
        Height="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Window.Resources>
        <vm:TreeTypeConverter x:Key="TreeTypeConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Размещение деревьев в Revit" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Тип дерева -->
        <TextBlock Grid.Row="1" Text="Тип дерева:"/>
        <ComboBox Grid.Row="2" 
                  ItemsSource="{Binding TreeTypes}"
                  SelectedItem="{Binding SelectedTreeType}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource TreeTypeConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Количество -->
        <TextBlock Grid.Row="3" Text="Количество деревьев:"/>
        <TextBox Grid.Row="4" 
                 Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Информация о сетке -->
        <Border Grid.Row="5" 
                Background="#F0F9FF" 
                CornerRadius="5" 
                Padding="15"
                BorderBrush="#B3E5FC"
                BorderThickness="1"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Информация о размещении:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Деревья будут размещены в виде квадратной сетки:" 
                           TextWrapping="Wrap"/>

                <TextBlock Text="{Binding GridInfo}" 
                           FontWeight="Bold" 
                           Foreground="#0277BD"
                           Margin="0,10,0,5"/>

                <TextBlock Text="Пример для 9 деревьев:" 
                           FontStyle="Italic"
                           Margin="0,10,0,5"/>

                <TextBlock Text="🌳 🌳 🌳" 
                           FontSize="14"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="🌳 🌳 🌳" 
                           FontSize="14"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="🌳 🌳 🌳" 
                           FontSize="14"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Расстояние между деревьями: 3 метра" 
                           Margin="0,10,0,0"
                           FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- Кнопка размещения -->
        <Button Grid.Row="6" 
                Content="Разместить деревья" 
                Command="{Binding PlaceCommand}"
                Background="#4CAF50"
                Foreground="White"
                Margin="0,0,0,10"/>

        <!-- Статус -->
        <TextBlock Grid.Row="7" 
                   Text="{Binding StatusMessage}"
                   Foreground="#1976D2"
                   FontStyle="Italic"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
